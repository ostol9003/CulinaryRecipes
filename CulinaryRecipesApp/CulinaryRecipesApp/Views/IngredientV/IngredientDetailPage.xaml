<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CulinaryRecipesApp.Views.IngredientV.IngredientDetailPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="Id" FontSize="Medium" />
            <Label Text="{Binding Id}" FontSize="Medium" />
            <Label Text="Name" FontSize="Medium" />
            <Label Text="{Binding Name}" FontSize="Medium"/>
            <Label Text="Url" FontSize="Medium" />
            <Label Text="{Binding Url}" FontSize="Medium"/>
            <Button Text="Edit" Command="{Binding UpdateCommand}" HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Delete" Command="{Binding DeleteCommand}" HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>